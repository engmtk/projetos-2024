@model IEnumerable<LojaOnline.Models.Usuario>

<div class="container">

    <h2 class="text-center">Lista de Usuários</h2>

    <!-- Formulário de pesquisa -->
    <form asp-action="Index" method="get" class="text-center mb-4">
        <div class="input-group justify-content-center">
            <input type="text" name="searchString" class="form-control w-50" placeholder="Pesquisar por CPF/CNPJ, Nome ou Código do Produto" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Pesquisar</button>
            </div>
        </div>
    </form>

    <!-- Tabela centralizada -->
    <table class="table table-striped table-bordered text-center">
        <thead>
            <tr>
                <th>CPF/CNPJ</th>
                <th>Nome Completo</th>
                <th>Código do Produto</th>
                <th>Nome do Produto</th>
                <th>Data de Entrada</th>
                <th>Data de Saída</th>
                <th>Encerrado</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CpfCnpj</td>
                    <td>@item.NomeCompleto</td>
                    <td>@item.CodigoProduto</td>
                    <td>@item.NomeProduto</td>
                    <td>@item.DataEntrada.ToShortDateString()</td>
                    <td>@item.DataSaida?.ToShortDateString()</td>
                    <td>@item.Encerrado</td>
                    <td>
                        <a asp-action="Edit" asp-route-cpfCnpj="@item.CpfCnpj" asp-route-codigoProduto="@item.CodigoProduto" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Delete" asp-route-cpfCnpj="@item.CpfCnpj" asp-route-codigoProduto="@item.CodigoProduto" class="btn btn-sm btn-danger">Deletar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Botão Novo Usuário -->
    <div class="text-center">
        <a class="btn btn-primary" asp-action="Create">Novo Usuário</a>
    </div>

</div>
