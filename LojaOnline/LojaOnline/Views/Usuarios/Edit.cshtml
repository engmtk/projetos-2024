@model LojaOnline.Models.Usuario

<h2>Editar Usuário</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CpfCnpj" />
    <input type="hidden" asp-for="CodigoProduto" />

    <div class="form-group">
        <label>Nome Completo</label>
        <input asp-for="NomeCompleto" class="form-control" />
    </div>
    <div class="form-group">
        <label>Nome do Produto</label>
        <input asp-for="NomeProduto" class="form-control" />
    </div>
    <div class="form-group">
        <label>Data de Entrada</label>
        <input asp-for="DataEntrada" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Data de Saída</label>
        <input asp-for="DataSaida" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>CPF/CNPJ de quem deu baixa</label>
        <input asp-for="CpfCnpjBaixa" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="Encerrado" class="form-check-input" type="checkbox" />
        <label asp-for="Encerrado" class="form-check-label">Encerrado</label>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
