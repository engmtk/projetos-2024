@model LojaOnline.Models.Usuario

<h2>Criar Usuário</h2>

<!-- Verifica se há erros no ModelState e exibe as mensagens de erro -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>CPF/CNPJ</label>
        <input asp-for="CpfCnpj" class="form-control" />
        <span asp-validation-for="CpfCnpj" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Nome Completo</label>
        <input asp-for="NomeCompleto" class="form-control" />
    </div>
    <div class="form-group">
        <label>Código do Produto</label>
        <input asp-for="CodigoProduto" class="form-control" />
    </div>
    <div class="form-group">
        <label>Nome do Produto</label>
        <input asp-for="NomeProduto" class="form-control" />
    </div>
    <div class="form-group">
        <label>Data de Entrada</label>
        <input asp-for="DataEntrada" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Data de Saída</label>
        <input asp-for="DataSaida" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>CPF/CNPJ de quem deu baixa</label>
        <input asp-for="CpfCnpjBaixa" class="form-control" />
    </div>
    <div class="form-group form-check">
        <input asp-for="Encerrado" class="form-check-input" type="checkbox" />
        <label asp-for="Encerrado" class="form-check-label">Encerrado</label>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
